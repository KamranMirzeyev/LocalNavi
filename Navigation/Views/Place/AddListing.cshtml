                            @Html.ValidationMessageFor(m => Model.Listing.Title, "", new {@class = "text-danger"})
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Slogan <span class="text-danger">*</span></label>
                            <input type="text" name="Slogan" data-validation="required" data-validation-error-msg="Slogan boş buraxmayın" class="form-control add-listing_form">
